<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@drawable/back3_bg">

    <TextView
        android:id="@+id/textView3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Profile"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name3"
        android:textColor="@color/white"
        android:layout_width="85dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:text="Name: "
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/mail3"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Email: "
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/receive"
        app:layout_constraintStart_toStartOf="@+id/receive"
        app:layout_constraintTop_toBottomOf="@+id/receive" />

    <TextView
        android:id="@+id/receive1"
        android:layout_width="307dp"
        android:layout_height="72dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back4_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail3" />

    <TextView
        android:id="@+id/receive3"
        android:layout_width="341dp"
        android:layout_height="67dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/back4_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password3" />

    <TextView
        android:id="@+id/password3"
        android:layout_width="130dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="Password: "
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/receive1"
        app:layout_constraintStart_toStartOf="@+id/receive1"
        app:layout_constraintTop_toBottomOf="@+id/receive1" />

    <TextView
        android:id="@+id/receive"
        android:layout_width="299dp"
        android:layout_height="68dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/back4_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name3" />


</androidx.constraintlayout.widget.ConstraintLayout>